@using Resources
@model KotaeteMVC.Models.ViewModels.NotificationModels.NotificationsListViewModel

@{
    Layout = "~/Views/Shared/_ProfileContentLayout.cshtml";
    ViewBag.Title = NotificationStrings.NotificationsTitle;
}

@section Profile {
    @Html.Partial("Profile", Model.Profile)
}

<h2>@NotificationStrings.NotifictionsHeader</h2>

@foreach (var notification in Model.NotificationEntities)
{
    <div class="notification-item row">
        @Html.Action("Notification", "Notifications", new { @eventEntity = notification, @seen = Model.SeenDictionary[notification] })
    </div>
}

@section scripts {
    @Scripts.Render("~/Scripts/App/notifications.js")
}
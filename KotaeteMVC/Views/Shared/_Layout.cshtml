<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kotaete</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @Html.Action("Index", "Navbar", null)

    <div class="container-fuid body-content">
        @{ Html.RenderPartial("_Alert"); }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kotaete</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/autosize.js")
    @Scripts.Render("~/Scripts/KotaeteJavascript.js")
    @RenderSection("scripts", required: false)
</body>
</html>

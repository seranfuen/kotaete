@model KotaeteMVC.Models.ViewModels.AnswerProfileViewModel

<a class="footer-button comment-button" id="@("comment-button-" + Model.Answer.AnswerId)" href="@Url.RouteUrl("Answer", new { @answerId = Model.Answer.AnswerId })">
    <img src="@if (Model.Comments.Any())
    {@Url.Content("~/Images/comments-on.png") }
    else {@Url.Content("~/Images/comments-off.png")}" alt="like" /> @(Model.TotalComments > 0 ? Model.TotalComments.ToString() : "")
</a>
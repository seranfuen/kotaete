@model IEnumerable<KotaeteMVC.Models.QuestionDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ProfileContentLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AskedTo.Avatar)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AskedTo.Avatar)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QuestionDetailId }) |
            @Html.ActionLink("Details", "Details", new { id=item.QuestionDetailId }) |
